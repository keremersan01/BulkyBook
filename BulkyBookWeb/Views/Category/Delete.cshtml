@model Category
@{
    ViewData["Title"] = "Delete";
}

<diV class = "container">
    <div class = "border p-3 mt-4">
        <form method = "post" asp-action="DeletePOST">
            <input asp-for="Id" hidden />
            <h2 class = "text-primary">Delete Category</h2>
            <div class = "form-group">
                <label asp-for="Name"></label>
                <input type = "text" asp-for="Name" disabled class = "form-control"/>
            </div>
             <div class = "form-group">
                <label asp-for="DisplayOrder"></label>
                <input type = "text" asp-for="DisplayOrder" disabled class = "form-control"/>
            </div>
            <div class = "mt-4">
                <input type = "submit" class= "btn btn-danger "value="Delete Category" />
            <a asp-controller= "Category" asp-action="Index" class = "btn btn-secondary">
                Back To List
            </a>
            </div>
            
        </form>
    </div>
</diV>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}